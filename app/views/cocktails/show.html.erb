<div class="container">
  <h2><%= @cocktail.name %></h2>
  <% @cocktail.doses.each do |dose| %>  
  <li><%= dose.description %> <%= dose.ingredient.name %></li>  
  <% end %>
  <br>
  <%= link_to "Add doses", new_cocktail_dose_path(@cocktail) %> | 
  <%= link_to "Back to all cocktails", cocktails_path %>
</div>
